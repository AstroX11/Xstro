{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node10",
        "outDir": "release",
        "rootDir": ".",
        "allowJs": false,
        "checkJs": false,
        "strict": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "composite": false,
        "lib": ["ES6", "DOM"],
        "paths": {
            "*": ["./node_modules/*", "./src/*"]
        },
        "typeRoots": ["./node_modules/@types", "./types"],
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "plugins/**/*",
        "src/**/*",
        "types/**/*",
        "index.ts",
        "config.ts",
        "**/*.json"
    ],
    "exclude": ["node_modules", "release"],
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "CommonJS",
            "resolveJsonModule": true
        }
    }
}
