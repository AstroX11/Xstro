{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "outDir": "./dist",
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["./node_modules/*", "./src/*"],
      "@types/*": ["./src/@types/*"]
    },
    "typeRoots": ["./src/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "bot.ts"],
  "exclude": ["node_modules", "dist"]
}
