{
     "compilerOptions": {
          "target": "ESNext",
          "module": "NodeNext",
          "moduleResolution": "nodenext",
          "rootDir": ".",
          "strictNullChecks": true,
          "skipLibCheck": true,
          "noImplicitThis": true,
          "resolveJsonModule": true,
          "forceConsistentCasingInFileNames": true,
          "noEmit": true,
          "allowImportingTsExtensions": true,
          "paths": {
               "*": ["./node_modules/*", "./src/*"]
          },
          "allowSyntheticDefaultImports": true
     }
}
