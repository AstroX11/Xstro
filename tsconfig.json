{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "outDir": ".",
        "rootDir": ".",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "removeComments": true,
        "paths": {
            "*": ["./node_modules/*", "./src/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.mts","scripts/**/*.mts", "main.mts"],
    "exclude": ["app.json", "package.json", "tsconfig.json"]
}
