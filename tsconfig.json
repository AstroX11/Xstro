{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowJs": false,
    "checkJs": false,
    "outDir": "release",
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"]
  },
  "include": [
    "plugins/**/*.ts",
    "plugins/**/*.json",
    "src/**/*.ts",
    "src/**/*.json",
    "types/**/*.ts",
    "types/**/*.json",
    "index.ts",
    "config.ts"
  ],
  "exclude": ["node_modules", "package.json"],
  "ts-node": {
    "files": true
  }
}