{
    "name": "xstro",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "23.9.0"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-python.python",
                "ms-vscode.vscode-typescript-next",
                "yarn.vscode-yarn"
            ]
        }
    },
    "postCreateCommand": "corepack enable && yarn global add node-gyp && pip install --upgrade pip && sudo apt-get update && sudo apt-get install -y ffmpeg",
    "remoteUser": "vscode"
}
